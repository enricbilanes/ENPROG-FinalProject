@model IEnumerable<ENTPROG_FINALS.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Transaction Log</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransactionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Table)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecordID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionMade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anonymous)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Table)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecordID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionMade)
            </td>
            <td>
            @if (item.Table.Equals("Donations"))
            {
                @item.Anonymous
            }
            else
            {
                <text> N/A </text>
            }
            </td>
        </tr>
}
    </tbody>
</table>
